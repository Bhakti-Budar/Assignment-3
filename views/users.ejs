<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Users</title>
  </head>
  <body>
    <h1>Users</h1>
    <button type="button" onclick="window.location.href='/users/createUser'">
      Add User
    </button>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
        <tr>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/users/editUser/<%= user._id %>" id="edit">Edit</a>
            <a
              href="/users/deleteUser/<%= user._id %>"
              onclick="return confirm('Are you sure you want to delete this user?')"
              id="delete"
              >Delete</a
            >
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
